#!/bin/bash
#
#testname:handlebody links
#

list1="4_1 5_1 6_1 6_2 6_3"
list2="4_1 6_1 6_3"

prefix="examples/handlebody_knots"

echo "links from the table"

group="A4"

res=`./contour union examples/knots/knot_0_1.knot $prefix/hk0_1.knot | ./contour --out -q ks_$group`
echo "SPLIT link:$group:$res"

for num in $list1
do
  file="$prefix/hl${num}.knot"
  res=`./contour -q ks_$group --out $file`
  echo "$num:$group:$res"
done

group="A5"

res=`./contour union examples/knots/knot_0_1.knot $prefix/hk0_1.knot | ./contour --out -q ks_$group`
echo "SPLIT link:$group:$res"

for num in $list2
do
  file="$prefix/hl${num}.knot"
  res=`./contour -q ks_$group --out $file`
  echo "$num:$group:$res"
done
